@require './_*.styl';
@import url('https://fonts.googleapis.com/css?family=Monoton');

body {
  margin: 0;
  font-family: 'Roboto', san-serif;
  background: #EEE;
  background-image: url(https://www.toptal.com/designers/subtlepatterns/patterns/geometry2.png);
  color: #212121;
  font-size: 12px;
  font-weight: 300;
}
h1 {
  font-family: Monoton, cursive;
  font-size: 48px;
  text-align: center;
}
.root {
  height: 100vh;
  width: 100vw;
}
.header
  position: fixed;
  top: 0
  left: 0
  text-align: center
  height 72px
  width: 100vw
  background-color: #212121
  color #FEFEFE
.nav
  position: fixed;
  top: 72px
  left: 0
  text-align: center
  width: 100vw
  background-color: #bcbcbc
  color #212121
  box-shadow: 0px 1px 2px 2px rgba(0,0,0,0.2)
  a
    color #282828
  a:hover
    background-color #FF9500
    box-shadow: 0px 1px 2px 2px rgba(255,149,0,0.6)
.navLink
  display: inline-block;
  font-size: 1em
  padding: 1rem 2rem
  text-decoration: none
  img
    max-height: 30px;
    max-width: 30px;
    color #FFFFFF
.appWrapper {
  max-width: 1200
}
.fullScreenFlexCenter {
  height: 100vh;
  width: 100vw;
  display:flex;
  justify-content: center;
  align-items: center;
}
.canvas
  height 320px
  width 320px
  margin 0
  padding 0
.paper
  background-color #FEFEFE
  border-radius 0.5%
  color #212121
  text-align left
  box-shadow 0 12px 15px 0 rgba(0, 0, 0, 0.24)

.formEdit
  padding 10px
  overflow hidden
  display flex
  flex-wrap wrap
  h2
    margin 1rem 0
  input, textarea, select
    height 60px
    padding 5px
    width 100%
    line-height 1.5em
    font-size 1.5em
    border 0
    appearance none
    border-radius 0
    background #eee
    &:focus
      outline 0
      background lighten(orange, 75%)
  textarea
    width 100%
  input:last-of-type
    width 100%
  button
    height 60px
    width 100%
    font-size 1.5em
    color #212121
    background-color: #bcbcbc
    border 0
    margin 10px 0
    -webkit-transition: background-color 0.5s;
    transition: background-color 0.5s;
  button:hover
    background-color: #ff9500

.text-container
  padding 10px 0

.footer
  position fixed
  bottom 0
  text-align center
  width 100%
  a
    text-decoration none
    color #ff9500

.sizeMessage
  font-size 2rem
  position fixed
  top 50%
  left 50%
  height 200px
  width 200px
  margin-top -100px
  margin-left -100px
  z-index: -1
  text-align: center;

@media all and (max-width: 320px)
  .canvas
    display none
  .colorPicker
    display none
  .initializeMessage
    display none
form.colorPicker
  margin 2rem 0
  text-align center
  label
    font-family: Monoton, cursive;
    font-size 1.2rem
  input[type="color"]
    height 3rem
    width 5rem
    border none
  input[type="color"]:focus
    box-shadow: 0px 0px 2px 2px rgba(255,149,0,0.6)
.listTitle
  font-size: 1.5rem
  margin-bottom: 1.5rem
.listItem
  background-color: rgba(255,255,255,0.9)
  font-size: 1.5rem
  text-decoration: none
  padding 2rem
.listItem:hover
  background-color: rgba(255,149,0,0.6)
  box-shadow: 0 4px 14px rgba(0,0,0,0.25), 0 6px 5px rgba(0,0,0,0.22);
  z-index: 10
.textWrap
  padding 2rem
